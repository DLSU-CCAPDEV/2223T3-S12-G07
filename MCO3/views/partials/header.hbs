<div class="header">
    <span class="animo_hub">AnimoHub</span>
    <form id ="search" method="get" action="/profile_page">
        <input type="text" placeholder="Search Username" class="search_bar" id="userName" name="userName">
        <input type="submit" value="Search" class="search_button">
    </form>
                <!--profile drop down-->
        {{#if flag}}
         {{#with active_user}}
            <div class="profile_drop_down">
                <div class="profile_drop_down_interface">
                    <a href='profile_page?userName={{userName}}'>
                        <img id ="{{uniqueId userName}}" class="profile_picture_bubble">
                     </a>
                    <div class="user_identity">
                        <div>{{firstName}} {{lastName}}</div>
                        <p class="user_name">@{{userName}}</p>
                    </div>
                </div>
                <div class="profile_drop_down_options">
                    <a href="editprofile">Edit</a>
                    <a href="logout?redirectTo=login">SignOut</a>
                </div>
            </div>
            {{/with}}
            {{else}}
            <a href="login">
                  <div class = "login_button">
                      Login
                  </div>
              </a>
            {{/if}}
</div>